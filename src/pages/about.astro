---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getImage } from "astro:assets";
import Content2 from "../components/widgets/Content2.astro";
import Values from "../components/widgets/Values.astro";
import aboutImage from "../assets/images/all_appliances.webp";

const metadata = {
    title: "About us",
    description:
        "Learn more about our vision, values, and the team behind Reliable Home Appliance Service.",
};
const companyValues = [
    {
        title: "Same Day Repairs",
        description:
            "We prioritize fast response times across Windsor-Essex to get your household back on track immediately. Most repairs are diagnosed and completed on the very same day.",
    },
    {
        title: "Flexible Scheduling",
        description:
            "Your time is valuable, so we offer convenient appointment windows that fit your busy life. We work around your schedule, including evening and weekend availability.",
    },
    {
        title: "Quality of Service",
        description:
            "With over 15 years of experience, we use manufacturer-approved parts to ensure long-lasting results. We don't just patch the problem; we fix it for good.",
    },
    {
        title: "Transparency",
        description:
            "No hidden fees or surprise costs. We provide clear, upfront estimates before any work begins so you know exactly what to expect.",
    },
    {
        title: "Licensed & Insured",
        description:
            "Rest easy knowing your home is in professional hands. Our team is fully licensed and insured for both gas and electric appliance repairs.",
    },
    {
        title: "Excellence",
        description:
            "We strive for 5-star excellence in every home we enter. From clean workspaces to friendly communication, our reputation is built on being Windsorâ€™s most reliable experts.",
    },
];

const optimizedImage = await getImage({
    src: aboutImage,
    format: "webp",
});
---

<BaseLayout {metadata}>
    <link slot="head" rel="preload" href={optimizedImage.src} as="image" />
    <Content2
        title="Our Vision"
        description={[
            "We are a trusted appliance repair company in Windsor, Ontario offering same-day service for all major appliances. As a one-stop service for repairs, we provide complete maintenance, installation and repair service for refrigerators, freezers, dishwashers, washing machines, clothes dryers, and ovens. We work on almost all of the more popular appliance brands.",
            "Experienced technicians provide all our repair, maintenance, and appliance installation services at affordable prices, and we guarantee our work. At Reliable Home Appliance Service's, our goal is to repair appliances the right way, the first time: No shortcuts. We are proud to provide high quality repairs in Windsor and Essex County. With over 15 years of experience, we guarantee satisfaction with every repair job we complete."
        ]}
        tagline="About"
        image={aboutImage}
        imageAlt="Modern web development office"
        actions={[
            {
                text: "Contact Us",
                href: "/contact",
                variant: "primary",
                icon: "lucide:mail",
            },
            {
                text: "Services",
                href: "/services",
                variant: "secondary",
                icon: "lucide:arrow-right",
            },
        ]}
    />
    <Values
        items={companyValues}
        columns={3}
        tagline="Our Values"
        title="What Defines Us"
        subtitle="Principles that guide our daily work"
    />
</BaseLayout>
