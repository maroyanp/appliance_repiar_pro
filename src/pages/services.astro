---
import BaseLayout from "../layouts/BaseLayout.astro";
import ServiceList from "../components/widgets/ServiceList.astro";
import Content from "../components/widgets/Content.astro";


const services = [
    {
        title: "Oven Services",
        slug: "oven-repair",
        description: "Oven no longer heating up, gas smell coming from the oven, no worries. We Service both Gas and Electric Ovens.",
        icon: "mdi:oven",
    },
    {
        title: "Stove Services",
        slug: "stove-repair",
        description: "Burner no longer turning on. Error code Displaying. No worries contact us.",
        icon: "lucide:heater",
    },
    {
        title: "Fridge & Freezer Services",
        slug: "fridge-freezer-repair",
        description: "Our refrigerator repairs in Windsor include all makes models. If your fridge motor is noisy or not keeping food at the right temperature, we can fix it.",
        icon: "mdi:fridge",
    },
    {
        title: "Washer Services",
        slug: "washer-repair",
        description:
            "Washing machine no longer agitating, clothes still soaking wet when cycle is finished, no worries get in touch with our expert technitions.",
        icon: "lucide:washing-machine",
    },
    {
        title: "Dryer Services",
        slug: "dryer-repair",
        description:
            "We service both Gas and Electric Dryers. Notice no heat, dryer squeaking or not spinning. These are all problems our technitions have seen before, contact us.",
        icon: "mdi:tumble-dryer",
    },
    {
        title: "Dishwasher Services",
        slug: "dishwasher-repair",
        description:
            "From Installations, to a leaking dishwasher we are more than able to help. ",
        icon: "mdi:dishwasher",
    },
];
const metadata = {
    title: "Services",
    description:
        "Discover our web development, SEO optimization, and technology consulting services.",
};
---

<BaseLayout {metadata}>
    <Content
        tagline="Services"
        title="Our Services"
        description={[
            "Any Appliance You Name It",
        ]}
    />
    <ServiceList services={services} classes={{ container: "pt-0 md:pt-0" }} />
</BaseLayout>
