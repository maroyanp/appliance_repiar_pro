---
import BaseLayout from "../layouts/BaseLayout.astro";
import Features from "../components/widgets/Features.astro";
import Content from "../components/widgets/Content.astro";
import Form from "../components/ui/Form.astro";

const metadata = {
    title: "Contact",
    description: "Contact us today for a quote for your appliance repair.",
};

const visionText = ["It’s our aim to make sure all your appliances are behaving the way they should. We’ll answer all your questions and concerns."];
---

<BaseLayout {metadata}>
    <Content tagline="Contact" title="Contact" description={visionText} />
    <div
        class="mx-auto max-w-xl bg-card border border-border rounded-3xl p-8 shadow-sm mb-12 md:mb-16"
    >
        <Form />
    </div>
    <Features
        tagline="Contact Means"
        title="We are here to help you"
        subtitle="Choose the communication channel you prefer. We respond in less than 24 hours."
        classes={{ container: "pt-0 md:pt-0" }}
        features={[
            {
                title: "Phone",
                description: "226 - 600 - 2505",
                icon: "lucide:phone",
                iconClass: "bg-green-500/10 text-green-400",
            },
            {
                title: "Email",
                description: "contact@company.com",
                icon: "lucide:mail",
                iconClass: "bg-yellow-500/10 text-yellow-400",
            },
            {
                title: "Location",
                description: "We service all of Essex County",
                icon: "lucide:map-pin",
                iconClass: "bg-red-500/10 text-red-400",
            },
            
        ]}
    />
</BaseLayout>
